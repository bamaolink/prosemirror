{
  "name": "@bamaolink/prosemirror-vue",
  "version": "0.0.2",
  "private": false,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "files": [
    "dist",
    "README.md",
    "README_zh-CN.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/bamao-link-editor.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/bamao-link-editor-umd.cjs"
      }
    }
  },
  "main": "./dist/bamao-link-editor-umd.cjs",
  "module": "./dist/bamao-link-editor.js",
  "scripts": {
    "dev": "vite",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "run-p type-check \"build-only {@}\" -- && npm run build:types",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix --cache",
    "lint": "run-s lint:*",
    "format": "prettier --write --experimental-cli src/"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.555.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.6.1",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.5",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "~1.29.0",
    "eslint-plugin-vue": "~10.5.1",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.29.0",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.0",
    "vite": "^7.2.4",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.1.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://github.com/bamaolink/prosemirror/tree/main/packages/vue#readme",
  "bugs": {
    "url": "https://github.com/bamaolink/prosemirror/issues"
  },
  "keywords": [
    "prosemirror",
    "editor",
    "WYSIWYG",
    "vue",
    "vue3"
  ],
  "author": "bamaolink",
  "license": "MIT"
}
